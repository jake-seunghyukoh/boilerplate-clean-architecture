{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@Entities/*": ["src/Domain/Entities/*"],
      "@UseCases/*": ["src/Domain/UseCases/*"],
      "@Adapters/*": ["src/InterfaceAdapters/*"]
    }
  }
}
